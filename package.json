{
  "name": "chiikobot",
  "version": "0.3.0",
  "description": "Simple Twitch comment bot",
  "license": "MIT",
  "author": {
    "name": "Yamashita Shinichi",
    "email": "dev@snicy.me",
    "url": "https://snicy.me"
  },
  "type": "module",
  "engines": {
    "node": "16.x"
  },
  "packageManager": "yarn@1.22.17",
  "main": "./dist/index.mjs",
  "scripts": {
    "postinstall": "npm run build",
    "start": "node ./dist/index.mjs",
    "dev": "tsc-watch --onSuccess \"yarn dev:node\"",
    "dev:node": "node -r dotenv/config ./dist/index.mjs dotenv_config_path=.env.local",
    "build": "tsc",
    "lint": "DOTENV_CONFIG_PATH='./.env.local' eslint ./src/**/*.mts"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "chance": "^1.1.8",
    "dotenv": "^14.3.2",
    "extensible-custom-error": "^0.0.7",
    "lodash-es": "^4.17.21",
    "sqlite3": "^5.0.2",
    "tmi.js": "^1.8.5",
    "uuid": "^8.3.2",
    "zod": "^3.11.6"
  },
  "devDependencies": {
    "@types/chance": "^1.1.3",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^17.0.12",
    "@types/sqlite3": "^3.1.8",
    "@types/tmi.js": "^1.8.1",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "lint-staged": "^12.3.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "tsc-watch": "^4.6.0",
    "typescript": "^4.5.5"
  }
}
