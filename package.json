{
  "name": "idiot-bot",
  "version": "0.1.0",
  "description": "Simple Twitch comment bot",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": "16.x"
  },
  "packageManager": "yarn@1.22.17",
  "main": "./dist/index.js",
  "scripts": {
    "start": "node ./dist/index.js",
    "dev": "nodemon -r dotenv/config --watch './**/*.ts' --exec 'node --experimental-specifier-resolution=node --loader ts-node/esm' src/index.ts dotenv_config_path=.env.local",
    "build": "tsc -b",
    "lint": "DOTENV_CONFIG_PATH='./.env.local' eslint ./src/**"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "dotenv": "^14.3.2",
    "lodash-es": "^4.17.21",
    "lowdb": "^3.0.0",
    "sqlite3": "^5.0.2",
    "tmi.js": "^1.8.5",
    "uuid": "^8.3.2",
    "zod": "^3.11.6"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^17.0.12",
    "@types/sqlite3": "^3.1.8",
    "@types/tmi.js": "^1.8.1",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "lint-staged": "^12.3.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  }
}
